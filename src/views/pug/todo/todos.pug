doctype html
html
    head
        title All Todos
        link(rel="stylesheet", href="/main.css")
    body
        div
            - 
            each todo in todos
                div
                    h2 Title : #{todo.title}
                    p ID : #{todo._id}
                    - let link = "todos/" + todo._id;
                    a(href=link) View
                    | 
                    button.btn-delete(data-todoId = todo._id) Delete
        script(src="/main.js")